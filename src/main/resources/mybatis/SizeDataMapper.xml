<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.gym.dao.ISizeDataDAO">
	<resultMap id="sizeData_DB_Result" type="sizeData">
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="ckey" property="ckey" />
		<result column="cvalue" property="cvalue" />
		<result column="order_code" property="orderCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="orderCode != null and orderCode != '' ">
				AND t.order_code = #{orderCode}
			</if>
		</trim>
	</sql>
	<select id="select_sizeData" parameterType="sizeData" resultMap="sizeData_DB_Result">
		SELECT
		t.id
		,t.user_id
		,t.ckey
		,t.cvalue
		,t.order_code
		FROM
		tgym_size_data t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_sizeData_count" parameterType="sizeData"
		resultType="java.lang.Long">
		SELECT count(1) FROM tgym_size_data t
		<include refid="where_condition" />
	</select>

	<insert id="insert_sizeData" parameterType="sizeData">
		INSERT INTO
		tgym_size_data(
		user_id
		,ckey
		,cvalue
		,order_code
		)
		VALUES(
		#{userId}
		,#{ckey}
		,#{cvalue}
		,#{orderCode}
		)
	</insert>

	<update id="update_sizeData" parameterType="sizeData">
		UPDATE tgym_size_data
		SET
		user_id = #{userId}
		,ckey = #{ckey}
		,cvalue = #{cvalue}
		,order_code = #{orderCode}
		WHERE id = #{id}
	</update>
	
	<delete id="delete_sizeData" parameterType="sizeData">
		DELETE FROM
		tgym_size_data
		WHERE
		order_code = #{orderCode}
	</delete>
</mapper>