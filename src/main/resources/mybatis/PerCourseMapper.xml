<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.gym.dao.IPerCourseDAO">
	<resultMap id="perCourse_DB_Result" type="perCourse">
		<result column="code" property="code" />
		<result column="sk_cycle" property="skCycle" />
		<result column="sk_start_datetime" property="skStartDatetime" />
		<result column="sk_end_datetime" property="skEndDatetime" />
		<result column="total_num" property="totalNum" />
		
		<result column="address" property="address" />
		<result column="pic" property="pic" />
		<result column="adv_pic" property="advPic" />
		<result column="description" property="description" />
		<result column="price" property="price" />
		
		<result column="location" property="location" />
		<result column="order_no" property="orderNo" />
		<result column="status" property="status" />
		<result column="coach_code" property="coachCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="location != null and location != '' ">
				AND t.location = #{location}
			</if>
			<if test="coachCode != null and coachCode != '' ">
				AND t.coach_code = #{coachCode}
			</if>
			<if test="address != null and address != '' ">
				AND t.address like "%"#{address}"%"
			</if>
			<if test="skCycle != null and skCycle != '' ">
				AND t.sk_cycle = #{skCycle}
			</if>
			<if test="classDatetimeStart != null and classDatetimeStart != '' ">
				<![CDATA[AND t.sk_start_datetime >= #{classDatetimeStart}]]>
			</if>	
			<if test="classDatetimeEnd != null and classDatetimeEnd != '' ">
				<![CDATA[AND t.sk_start_datetime <= #{classDatetimeEnd}]]>
			</if>
		</trim>
	</sql>
	<select id="select_perCourse" parameterType="perCourse" resultMap="perCourse_DB_Result">
		SELECT
		t.code
		,t.sk_cycle
		,t.sk_start_datetime
		,t.sk_end_datetime
		,t.total_num
		
		,t.address
		,t.pic
		,t.adv_pic
		,t.description
		,t.price
		
		,t.location
		,t.order_no
		,t.status
		,t.coach_code
		FROM
		tgym_per_course t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_perCourse_count" parameterType="perCourse"
		resultType="java.lang.Long">
		SELECT count(1) FROM tgym_per_course t
		<include refid="where_condition" />
	</select>

	<insert id="insert_perCourse" parameterType="perCourse">
		INSERT INTO
		tgym_per_course(
		code
		,sk_cycle
		,sk_start_datetime
		,sk_end_datetime
		,total_num
		
		,address
		,pic
		,adv_pic
		,description
		,price
		,location
		,order_no
		,status
		,coach_code
		)
		VALUES(
		#{code}
		,#{skCycle}
		,#{skStartDatetime}
		,#{skEndDatetime}
		,#{totalNum}
		
		,#{address}
		,#{pic}
		,#{advPic}
		,#{description}
		,#{price}
		,#{location}
		,#{orderNo}
		,#{status}
		,#{coachCode}
		)
	</insert>

	<update id="update_perCourse" parameterType="perCourse">
		UPDATE tgym_per_course
		SET
		sk_cycle = #{skCycle}
		,sk_start_datetime = #{skStartDatetime}
		,sk_end_datetime = #{skEndDatetime}
		,total_num = #{totalNum}
		,address = #{address}
		
		,pic = #{pic}
		,adv_pic = #{advPic}
		,description = #{description}
		,price = #{price}
		,location = #{location}
		
		,order_no = #{orderNo}
		,status = #{status}
		,coach_code = #{coachCode}
		WHERE code = #{code}
	</update>

	<delete id="delete_perCourse" parameterType="perCourse">
		DELETE FROM
		tgym_per_course
		WHERE
		code = #{code}
	</delete>
</mapper>